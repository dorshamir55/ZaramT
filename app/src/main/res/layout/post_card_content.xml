<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:background="@android:color/white"
    app:contentPadding="10dp"
    android:layout_marginHorizontal="5dp">
<!--    android:stateListAnimator="@drawable/card_state_animator_selector">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/question_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bubblegum_sans"
                android:maxLines="1"
                android:text="Question"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_cell"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doit_icon"
                    android:contentDescription="user_image"
                    android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/nickname_cell"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/caveat_brush"
                android:maxLines="1"
                android:text="Nickname"
                android:textColor="#ab2030"
                android:textSize="12sp"
                android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 1"
                android:checked="true"/>
            <TextView
                android:id="@+id/answers_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#4a4a4a"
                android:text="Choose one possibility"
                android:textSize="12sp"/>

        </LinearLayout>

</androidx.cardview.widget.CardView>