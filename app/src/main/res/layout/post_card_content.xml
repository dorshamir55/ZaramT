<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    app:cardUseCompatPadding="true">-->
    <!--    app:cardCornerRadius="8dp"-->
    <!--    android:background="@android:color/white"-->
    <!--    app:contentPadding="10dp"-->
    <!--    android:layout_marginHorizontal="5dp">-->
    <!--    android:stateListAnimator="@drawable/card_state_animator_selector">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/question_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="1"
            android:text="Question"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/toolbarColorLight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cell_post"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/doit_icon"
                android:contentDescription="user_image"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/nickname_cell_post"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/caveat_brush"
                android:maxLines="1"
                android:text="Nickname"
                android:textColor="#ab2030"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/toolbarColorLight"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/options_cell_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/answer1_cell_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 1"
                    android:checked="true"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/answer2_cell_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 2"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/answer3_cell_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 3"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/answer4_cell_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 4"/>
            </RadioGroup>
            <Button
                android:id="@+id/vote_cell_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/button_style"
                android:text="@string/vote"
                android:layout_gravity="bottom|end"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@color/toolbarColor"/>

</androidx.cardview.widget.CardView>